@model GTravel.Domain.Meal
@{
    var title = "Create Meals";
}


@if (Model.Id != 0)
{
    title = "Update Meals";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Tour">Tours</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-controller="Meal" asp-route-id="@Model.TourId">Meal Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">@title</li>
    </ol>
</nav>
<form method="post" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12">
            <h2 class="text-primary mt-3 mb-4">@title</h2>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Breakfast"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Breakfast" class="form-control" />
                        <span asp-validation-for="@Model.Breakfast" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Lunch"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Lunch" class="form-control" />
                        <span asp-validation-for="@Model.Lunch" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Dinner"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Dinner" class="form-control" />
                        <span asp-validation-for="@Model.Dinner" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-outline-primary form-control" asp-route-tourId="@Model.TourId">Update</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@Model.TourId" class="btn btn-success form-control">Back to List</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-outline-primary form-control" asp-route-tourId="@Model.TourId">Create</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@Model.TourId" class="btn btn-success form-control">Back to List</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
