@model GTravel.Domain.Tour

@{
    var title ="Tour Cities: "+ Model.Name;

}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Tour">Tours</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cities</li>
    </ol>
</nav>
<div class=" border backgroundWhite p-4">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">@title</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-route-tourId="@Model.Id" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Add Cities </a>
        </div>
    </div>
    <br />
    <br />

    <br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>City</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>


@section Scripts{
    <script>var tourId = '@Model.Id'</script>
    <script src="~/js/tourCity.js"></script>
}
