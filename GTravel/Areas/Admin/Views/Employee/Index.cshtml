@model IEnumerable<GTravel.Domain.Employee>
@{
    var title = "Employees";
}


<nav aria-label="breadcrumb mt-3">
    <ol class="breadcrumb bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Employees</li>
    </ol>
</nav>
<div class=" border backgroundWhite p-3">
    <div class="row mb-5">
        <div class="col-6">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">
                <i class="fas fa-plus"></i>&nbsp; New Employee
            </a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-primary">
                <th>Name</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>Phone</th>
                <th></th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber </td>

                    <td>
                        @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                        {
                            <a class="btn btn-success text-white" asp-action="Lock" style="width:50px;" asp-route-id="@item.Id">
                                <i class="fas fa-lock-open"></i>
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-danger text-white" asp-action="Unlock" style="width:50px;" asp-route-id="@item.Id">
                                <i class="fas fa-lock"></i>
                            </a>
                        }

                    </td>
                </tr>
            }
        </table>
    }
    else
    {

        <p>No other Employees Exist...</p>
    }
</div>




