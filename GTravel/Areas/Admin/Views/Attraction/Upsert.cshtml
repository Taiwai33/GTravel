@model GTravel.Domain.ViewModels.SelectListViewModel<GTravel.Domain.Attraction>
@{
    var title = "Create";
    var Attraction = Model.Entity;

}



@if (Attraction.Id != 0)
{
    title = "Update";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Attraction">Attractions</a></li>
        <li class="breadcrumb-item active" aria-current="page">@title</li>
    </ol>
</nav>
<form method="post" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12">
            <h2 class=" text-primary">@title Attraction</h2>
            <br />


            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Attraction.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Attraction.Name" class="form-control" />
                        <span asp-validation-for="@Attraction.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Attraction.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Attraction.Description" class="form-control" />
                        <span asp-validation-for="@Attraction.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Attraction.CityId">City</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Attraction.CityId" asp-items="Model.SelectListItems">
                            <option value="">--Select City--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Attraction.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="@Attraction.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
