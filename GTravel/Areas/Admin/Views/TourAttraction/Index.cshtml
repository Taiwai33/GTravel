@model GTravel.Domain.TourCity

@{

    var title = $"Attractions: " + Model.Tour.Name;
}


<nav aria-label="breadcrumb mt-3">
    <ol class="breadcrumb bg-transparent">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Tour">Tours</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="TourCity" asp-all-route-id="@Model.TourId">Cities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Attractions</li>
    </ol>
</nav>
<div class=" border backgroundWhite p-4">
    <div class="row mb-5">
        <div class="col-6">
            <h3 class="text-primary">@title</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-route-tourCityId="@Model.Id" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Add Attraction </a>
        </div>
    </div>

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Attraction</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>


@section Scripts{

    <script>var tourCityId = '@Model.Id'</script>

    <script src="~/js/tourAttraction.js"></script>
}
