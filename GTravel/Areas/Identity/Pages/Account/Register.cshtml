@page
@model RegisterModel

@{

}

<h1>Register New Employee</h1>

<div class="row backgroundWhite ">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.FirstName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div><div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.LastName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div><div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div><div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.Phone"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Phone" class="form-control" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>
            </div><div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.StreetAddress"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.StreetAddress" id="date-picker-example"  class="form-control input-with-post-icon datepicker" />
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
            </div><div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.DOB"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.DOB" id="date-picker-example"  class="form-control input-with-post-icon datepicker" />
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
            </div>
                 
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.City"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.State"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.State" class="form-control" />
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.PostCode"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.PostCode" class="form-control" />
                    <span asp-validation-for="Input.PostCode" class="text-danger"></span>
                </div>
            </div>
                          
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.Password"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 ">
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3"></div>
                <div class="col-5">
                    <input type="radio" name="rdUserRole" value="Admin" /> Admin
                    <input type="radio" name="rdUserRole" value="Manager" checked /> Manager
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <button type="submit" class="btn btn-primary form-control">Register</button>
                </div>
            </div>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
}
